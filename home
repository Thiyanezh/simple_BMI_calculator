        <script>
            function calculate()
            {
                const a = parseFloat(document.querySelector('.text1').value);
                const b = parseInt(document.querySelector('.text2').value);
                const ans=((b/(a*a))*10000).toFixed(5);
                document.querySelector('.out').innerHTML=ans;
            }
            
        </script>
